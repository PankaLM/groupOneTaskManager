{
  "version": "0.0.1",
  "outputDir": "../TaskManager.Web.Host/App/",
  "jsDir": "js/",
  "cssDir": "css/",
  "templatesDir": "templates/",

  "app": [
    "src/**/*.js",
    "!src/bower_components/**"
  ],
  "lib": [
    "src/bower_components/jquery/dist/jquery.min.js",
    "src/bower_components/jquery-ui/jquery-ui.js",
    "src/bower_components/angular/angular.min.js",
    "src/bower_components/chosen/chosen.jquery.js",
    "src/bower_components/angular-ui-date/dist/date.js",
    "src/bower_components/angular-chosen-localytics/dist/angular-chosen.min.js",
    "src/bower_components/angular-ui-router/release/angular-ui-router.js",
    "src/bower_components/angular-resource/angular-resource.js",
    "src/bower_components/lodash/dist/lodash.js",
    "src/bower_components/angular-smart-table/dist/smart-table.min.js"
  ],
  "css": [
    "src/bower_components/bootstrap/dist/css/bootstrap.css",
    "src/bower_components/font-awesome/css/font-awesome.css",
    "src/bower_components/jquery-ui/themes/smoothness/jquery-ui.css",
    "src/css/**/*.css"
  ],
  "assets": {
    "../fonts/": [
      "src/bower_components/bootstrap/dist/fonts/**",
      "src/bower_components/bootstrap/fonts/glyphicons-halflings-regular.woff2"
    ],
    "../images/": [
      "src/bower_components/jquery-ui/themes/smoothness/images/**"
    ]
  },
  "templates": [
    "src/**/*.html"
  ]
}
